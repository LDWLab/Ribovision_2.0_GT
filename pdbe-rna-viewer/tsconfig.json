{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        // "downlevelIteration": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "noEmitHelpers": true,
        "lib": [ "es6", "dom", "esnext.asynciterable", "es2016" ],
        "rootDir": "src/app",
        "outDir": "lib",
        "baseUrl": "./",
    },
    "include": [ "src/app/*" ]
}